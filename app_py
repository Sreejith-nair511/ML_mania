      "source": [
        "%%writefile app.py\n",
        "import streamlit as st\n",
        "import pandas as pd\n",
        "import matplotlib.pyplot as plt\n",
        "\n",
        "# ===============================\n",
        "# F1 WINNER PREDICTION APP (2025-2026)\n",
        "# ===============================\n",
        "# Author: Humzaie style explanation\n",
        "# Wrapped with Streamlit for Hugging Face Spaces\n",
        "# ===============================\n",
        "\n",
        "# Page Config\n",
        "st.set_page_config(page_title=\"F1 Winner Prediction\", page_icon=\"ğŸï¸\", layout=\"wide\")\n",
        "\n",
        "# Title & Description\n",
        "st.title(\"ğŸ† Formula 1 Winner Prediction (2025 - 2026)\")\n",
        "st.write(\"\"\"\n",
        "This app shows **simulated winning probabilities** for top Formula 1 teams\n",
        "in the seasons **2025 & 2026**.\n",
        "\"\"\")\n",
        "\n",
        "# Dataset\n",
        "data = {\n",
        "    \"Year\": [2025, 2025, 2025, 2025, 2025,\n",
        "             2026, 2026, 2026, 2026, 2026],\n",
        "    \"Team\": [\"McLaren\", \"Red Bull\", \"Ferrari\", \"Mercedes\", \"Aston Martin\",\n",
        "             \"McLaren\", \"Red Bull\", \"Ferrari\", \"Mercedes\", \"Aston Martin\"],\n",
        "    \"Win_Probability\": [0.40, 0.25, 0.15, 0.12, 0.08,   # 2025 predictions\n",
        "                        0.30, 0.28, 0.25, 0.12, 0.05]   # 2026 predictions\n",
        "}\n",
        "\n",
        "df = pd.DataFrame(data)\n",
        "\n",
        "# Sidebar Year Selection\n",
        "year_selected = st.sidebar.selectbox(\"Select Year\", [2025, 2026])\n",
        "\n",
        "# Show Dataset\n",
        "st.subheader(f\"ğŸ“Š Prediction Dataset for {year_selected}\")\n",
        "st.dataframe(df[df[\"Year\"] == year_selected])\n",
        "\n",
        "# Plot Graph\n",
        "fig, ax = plt.subplots(figsize=(8,6))\n",
        "df_year = df[df[\"Year\"] == year_selected]\n",
        "ax.bar(df_year[\"Team\"], df_year[\"Win_Probability\"],\n",
        "       color=\"orange\" if year_selected==2025 else \"skyblue\")\n",
        "ax.set_title(f\"F1 Predicted Winner Chances - {year_selected}\")\n",
        "ax.set_xlabel(\"Teams\")\n",
        "ax.set_ylabel(\"Winning Probability\")\n",
        "st.pyplot(fig)\n",
        "\n",
        "# Show Predicted Winner\n",
        "winner = df_year.loc[df_year[\"Win_Probability\"].idxmax()][\"Team\"]\n",
        "st.success(f\"ğŸ† Predicted Winner {year_selected}: **{winner}**\")\n"
      ],
